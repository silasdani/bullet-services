<% content_for :email_title do %>
  Invoice for <%= @flat_address %>
<% end %>

<div class="u-row-container" style="padding: 0px;background-color: transparent">
  <div class="u-row" style="margin: 0 auto;min-width: 320px;max-width: 500px;overflow-wrap: break-word;word-wrap: break-word;word-break: break-word;background-color: transparent;">
    <div style="border-collapse: collapse;display: table;width: 100%;height: 100%;background-color: transparent;">
      <div class="u-col u-col-100" style="max-width: 320px;min-width: 500px;display: table-cell;vertical-align: top;">
        <div style="height: 100%;width: 100% !important;">
          <div style="box-sizing: border-box; height: 100%; padding: 30px;">
            <table style="font-family:arial,helvetica,sans-serif;" role="presentation" cellpadding="0" cellspacing="0" width="100%" border="0">
              <tbody>
                <tr>
                  <td style="overflow-wrap:break-word;word-break:break-word;padding:10px;font-family:arial,helvetica,sans-serif;" align="left">
                    <div style="font-family: helvetica,sans-serif; font-size: 16px; line-height: 140%; text-align: left; word-wrap: break-word;">
                      <p style="line-height: 140%;">Dear <%= @client_name %>,</p>
                      <p style="line-height: 140%;"> </p>
                      <p style="line-height: 140%;">Please find below the details of your invoice:</p>
                      <p style="line-height: 140%;"> </p>
                      <p style="line-height: 140%;"><strong>Invoice Number:</strong> <%= @invoice_number %></p>
                      <p style="line-height: 140%;"><strong>Amount:</strong> <%= @invoice_amount %></p>
                      <p style="line-height: 140%;"><strong>Due Date:</strong> <%= @due_date %></p>
                      <p style="line-height: 140%;"><strong>Property:</strong> <%= @flat_address %></p>
                      <p style="line-height: 140%;"> </p>
                      <% if @wrs_link.present? %>
                        <p style="line-height: 140%;"><strong>WRS Link:</strong> <a href="<%= @wrs_link %>"><%= @wrs_link %></a></p>
                      <% end %>
                      <p style="line-height: 140%;"> </p>
                      <% if @payment_link.present? %>
                        <table width="100%" border="0" cellspacing="0" cellpadding="0" role="presentation">
                          <tr>
                            <td style="padding: 0px 0px 0px 0px;">
                              <table width="100%" border="0" cellspacing="0" cellpadding="0" role="presentation">
                                <tr>
                                  <td valign="top" style="padding: 15px 40px 15px 40px; border-radius: 0px; background-color: #ffffff00;" bgcolor="#ffffff">
                                    <table width="100%" border="0" cellpadding="0" cellspacing="0" role="presentation">
                                      <tr>
                                        <th valign="top" align="center" style="text-align: center; font-weight: normal; line-height: 1;">
                                          <!--[if !mso]><!-- -->
                                            <a style="display: inline-block; box-sizing: border-box; border-radius: 16px; background-color: #000000; padding: 14px 18px 14px 18px; width: 100%; font-family: 'Fira Sans', Arial, Helvetica, sans-serif; font-weight: 500; font-size: 16px; line-height: 150%; letter-spacing: -0.2px; color: #ffffff; vertical-align: top; text-align: center; text-align-last: center; text-decoration: none; -webkit-text-size-adjust: none;" href="<%= @payment_link %>" target="_blank"><span style="display: block;"><span>Pay Invoice</span></span></a>
                                            <!--<![endif]-->
                                          </th>
                                        </tr>
                                      </table>
                                    </td>
                                  </tr>
                                </table>
                              </td>
                            </tr>
                          </table>
                        <% end %>
                      </div>
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
