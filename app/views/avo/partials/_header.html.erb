<div class="avo-theme-toggle-wrap flex items-center ml-auto">
  <%# Theme Toggle Button %>
  <button
    type="button"
    data-controller="theme-toggle"
    data-action="click->theme-toggle#toggle"
    data-theme-toggle-target="icon"
    class="p-2 rounded-lg text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-900 transition-colors cursor-pointer"
    aria-label="Toggle dark mode"
    title="Toggle dark mode"
  >
    <%# Sun icon (shown in dark mode) %>
    <svg class="sun-icon w-5 h-5 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
    </svg>
    <%# Moon icon (shown in light mode) %>
    <svg class="moon-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
    </svg>
  </button>
  <%# <%= link_to 'Bullet', '/', class: 'text-primary-500 font-semibold', target: :_blank %>
</div>
